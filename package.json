{
  "name": "assemble-js",
  "version": "0.0.1",
  "description": "Assemble different stacks for JS development for learning purposes.",
  "main": "server/main.js",
  "config": {
    "generatedApp": "./public/generated-app.js"
  },
  "scripts": {
    "build": "browserify ./client/main.js -o $npm_package_config_generatedApp && echo 'Ready.'",
    "test:compile": "browserify $(find client -name '*-test.js')",
    "test:build": "browserify $(find client -name '*-test.js') -o ./public/generated-test.js",
    "karma:start": "karma start karma.conf.js",
    "karma:single-run": "karma start karma.conf.js --single-run",
    "jesttest": "jest",
    "test": "mocha -w --compilers .:client/test/compiler.js `find client -name '*-test.js'`",
    "watch": "watch 'npm run build' ./client",
    "nodemon": "nodemon server/main --watch server",
    "start": "parallelshell 'npm run watch' 'npm run nodemon'"
  },
  "browserify": {
    "transform": [
      "stringify",
      "reactify"
    ]
  },
  "jest": {
    "rootDir": "client",
    "scriptPreprocessor": "../jest-preprocessor.js",
    "unmockedModulePathPatterns": [
      "component-test-utils",
      "events",
      "jquery",
      "pubsub-jquery",
      "react"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foxdonut/assemble-js"
  },
  "keywords": [
    "JavaScript"
  ],
  "author": "foxdonut",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foxdonut/assemble-js/issues"
  },
  "homepage": "https://github.com/foxdonut/assemble-js",
  "dependencies": {
    "body-parser": "^1.12.2",
    "express": "^4.12.3",
    "jquery": "^2.1.4",
    "lodash": "^3.6.0",
    "radio": "^0.2.0",
    "react": "^0.13.3",
    "react-tools": "^0.13.3",
    "rest": "^1.3.1",
    "when": "^3.7.2"
  },
  "devDependencies": {
    "browserify": "^9.0.3",
    "chai": "^2.3.0",
    "jest-cli": "^0.4.5",
    "jsdom": "^3.1.2",
    "karma": "^0.12.31",
    "karma-browserify": "^4.1.2",
    "karma-cli": "0.0.4",
    "karma-mocha": "^0.1.10",
    "karma-phantomjs-launcher": "^0.1.4",
    "mocha": "^2.2.5",
    "mochify": "^2.8.1",
    "nodemon": "^1.3.7",
    "parallelshell": "^1.1.1",
    "phantomjs": "^1.9.16",
    "reactify": "^1.1.0",
    "sinon": "^1.14.1",
    "stringify": "^3.1.0",
    "watch": "^0.16.0"
  }
}
