{
  "name": "assemble-js",
  "version": "0.0.1",
  "description": "Assemble different stacks for JS development for learning purposes.",
  "main": "server/main.js",
  "config": {
    "generatedApp": "./public/generated-app.js"
  },
  "scripts": {
    "build": "browserify ./client/main.js -o $npm_package_config_generatedApp && echo 'Ready.'",
    "pretest": "npm run build",
    "test:compile": "browserify $(find client -name '*-test.js')",
    "test:raw": "npm -s run test:compile | tape-run",
    "test:build": "browserify $(find client -name '*-test.js') -o ./public/generated-test.js",
    "test:faucet": "npm run test:raw | faucet",
    "test": "npm run test:raw | tap-spec",
    "karma:start": "karma start karma.conf.js",
    "karma:single-run": "karma start karma.conf.js --single-run",
    "watch": "watch 'npm run build' ./client",
    "watch:test": "watch 'npm run test:generate' ./client",
    "nodemon": "nodemon server/main --watch server",
    "test:server": "parallelshell 'node server/main' 'npm run watch:test'",
    "start": "parallelshell 'npm run watch' 'npm run nodemon'"
  },
  "browserify": {
    "transform": [
      "stringify",
      "reactify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foxdonut/assemble-js"
  },
  "keywords": [
    "JavaScript"
  ],
  "author": "foxdonut",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foxdonut/assemble-js/issues"
  },
  "homepage": "https://github.com/foxdonut/assemble-js",
  "dependencies": {
    "body-parser": "^1.12.2",
    "express": "^4.12.3",
    "jquery": "^2.1.4",
    "lodash": "^3.6.0",
    "radio": "^0.2.0",
    "react": "^0.13.3",
    "rest": "^1.3.1",
    "when": "^3.7.2"
  },
  "devDependencies": {
    "browserify": "^9.0.3",
    "faucet": "0.0.1",
    "karma": "^0.12.31",
    "karma-browserify": "^4.1.2",
    "karma-cli": "0.0.4",
    "karma-phantomjs-launcher": "^0.1.4",
    "karma-tap": "^1.0.3",
    "karma-tape-reporter": "^1.0.3",
    "nodemon": "^1.3.7",
    "parallelshell": "^1.1.1",
    "phantomjs": "^1.9.16",
    "reactify": "^1.1.0",
    "sinon": "^1.14.1",
    "stringify": "^3.1.0",
    "tap-spec": "^3.0.0",
    "tape": "^3.5.0",
    "tape-catch": "^1.0.4",
    "tape-run": "^1.0.0",
    "tessed": "^1.0.1",
    "watch": "^0.16.0"
  }
}
