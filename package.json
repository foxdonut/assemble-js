{
  "name": "assemble-js",
  "version": "0.0.1",
  "description": "Assemble different stacks for JS development for learning purposes.",
  "main": "server/main.js",
  "config": {
    "generatedApp": "./public/generated-app.js"
  },
  "scripts": {
    "build": "browserify ./client/main.js -o $npm_package_config_generatedApp && echo 'Ready.'",
    "test": "jest",
    "test:watch": "watch 'npm test' ./client",
    "watch": "watch 'npm run build' ./client",
    "nodemon": "nodemon server/main --watch server",
    "start": "parallelshell 'npm run watch' 'npm run nodemon'"
  },
  "browserify": {
    "transform": [
      "stringify",
      "reactify"
    ]
  },
  "jest": {
    "rootDir": "client",
    "scriptPreprocessor": "../jest-preprocessor.js",
    "unmockedModulePathPatterns": [
      "component-test-utils",
      "events",
      "jquery",
      "pubsub-jquery",
      "react"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foxdonut/assemble-js"
  },
  "keywords": [
    "JavaScript"
  ],
  "author": "foxdonut",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foxdonut/assemble-js/issues"
  },
  "homepage": "https://github.com/foxdonut/assemble-js",
  "dependencies": {
    "body-parser": "^1.12.2",
    "express": "^4.12.3",
    "jquery": "^2.1.4",
    "lodash": "^3.6.0",
    "react": "^0.13.3",
    "react-tools": "^0.13.3"
  },
  "devDependencies": {
    "browserify": "^9.0.3",
    "jest-cli": "^0.4.5",
    "nodemon": "^1.3.7",
    "parallelshell": "^1.1.1",
    "reactify": "^1.1.0",
    "sinon": "^1.14.1",
    "stringify": "^3.1.0",
    "watch": "^0.16.0"
  }
}
