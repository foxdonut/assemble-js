{
  "name": "assemble-js",
  "version": "0.0.1",
  "description": "Assemble different stacks for JS development for learning purposes.",
  "main": "server/main.js",
  "config": {
    "generatedApp": "./public/generated-app.js"
  },
  "scripts": {
    "build": "browserify ./client/main.js -o $npm_package_config_generatedApp",

    "pretest": "npm run build",
		"test:build": "browserify $(find client -name '*-test.js')",
    "test:raw": "npm run test:build | tail -n +5 | tape-run",
    "test:generate": "browserify $(find client -name '*-test.js') -o ./public/generated-test.js",
    "test:faucet": "npm run test:raw 2>/dev/null | faucet",
    "test": "npm run test:raw | tap-spec",

    "watch": "watch 'npm run build' ./client",
    "watch:test": "watch 'npm run test:generate' ./client",
		"livereload": "livereload ./public --port 9099",

    "server": "nodemon server/main --watch server",
    "preserver:test": "npm run test:generate",
    "server:test": "parallelshell 'node server/main' 'npm run watch:test'",

    "prestart": "npm run build",
    "start": "parallelshell 'npm run watch' 'npm run server'"
  },
  "browserify": {
    "transform": [
      "stringify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foxdonut/assemble-js"
  },
  "keywords": [
    "JavaScript"
  ],
  "author": "foxdonut",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/foxdonut/assemble-js/issues"
  },
  "homepage": "https://github.com/foxdonut/assemble-js",
  "dependencies": {
    "body-parser": "^1.12.2",
    "express": "^4.12.3",
    "jquery": "^2.1.3",
    "knockout": "^3.3.0",
    "knockout-mapping": "^2.5.0",
    "lodash": "^3.6.0",
    "rest": "^1.3.1",
    "when": "^3.7.2",
    "wire": "^0.10.10"
  },
  "devDependencies": {
    "browserify": "^9.0.3",
    "faucet": "0.0.1",
    "livereload": "^0.3.7",
    "nodemon": "^1.3.7",
    "parallelshell": "^1.1.1",
    "phantomjs": "^1.9.16",
    "sinon": "^1.14.1",
    "stringify": "^3.1.0",
    "tap-spec": "^3.0.0",
    "tape": "^3.5.0",
    "tape-run": "^1.0.0",
    "tessed": "^1.0.1",
    "watch": "^0.16.0"
  }
}
